<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/cinema_black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Quantity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/cinema_gold"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_dialog_minus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:backgroundTint="@color/cinema_dark_grey"
            android:textColor="@color/white"
            android:padding="0dp"/>

        <TextView
            android:id="@+id/tv_dialog_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btn_dialog_plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:backgroundTint="@color/cinema_dark_grey"
            android:textColor="@color/white"
            android:padding="0dp"/>

    </LinearLayout>

</LinearLayout>
